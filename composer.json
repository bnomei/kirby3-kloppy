{
  "name": "bnomei/kirby3-plopfile",
  "type": "kirby-plugin",
  "version": "1.0.2",
  "description": "Plopfile to generate and append to various files for Kirby3 CMS using Plop.js",
  "license": "MIT",
  "keywords": [
    "kirby3",
    "kirby3-cms",
    "cli",
    "commandline",
    "make",
    "generator",
    "generate",
    "template",
    "plop",
    "prompt",
    "inquirer",
    "handlebars",
    "hbs",
    "automate",
    "consistency",
    "workflow"
  ],
  "authors": [
    {
      "name": "Bruno Meilick",
      "email": "b@bnomei.com"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "require": {
    "php": ">=7.3.0",
    "getkirby/composer-installer": "^1.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "scripts": {
    "dev": [
      "composer install",
      "yarn upgrade",
      "yarn add prettier --dev",
      "yarn prettier --write src"
    ],
    "dist": [
      "composer install --no-dev --optimize-autoloader",
      "yarn prettier --write src",
      "yarn remove prettier",
      "rm -rf node_modules",
      "yarn install",
      "git rm -rf --cached .; git add .;"
    ],
    "reset": [
      "rm -rf tests; mkdir tests;mkdir tests/content;mkdir tests/site;mkdir tests/site/accounts;mkdir tests/site/blueprints;mkdir tests/site/config;mkdir tests/site/controllers;mkdir tests/site/languages;mkdir tests/site/models;mkdir tests/site/plugins;mkdir tests/site/snippets;mkdir tests/site/templates;touch tests/image.png"
    ],
    "test": [
      "composer reset",
      "phpunit --configuration ./phpunit.xml"
    ]
  }
}
