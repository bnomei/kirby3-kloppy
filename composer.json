{
    "name": "bnomei/kirby3-plopfile",
    "type": "kirby-plugin",
    "version": "1.0.0",
    "description": "Plopfile to generate various files for Kirby3 CMS using Plop.js",
    "license": "MIT",
    "keywords": [
        "kirby3",
        "kirby3-cms",
        "cli",
        "commandline",
        "make",
        "generator",
        "generate",
        "template",
        "plop",
        "prompt",
        "inquirer",
        "handlebars",
        "hbs",
        "automate",
        "consistency",
        "workflow"
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "php": ">=7.3.0",
        "getkirby/composer-installer": "^1.2"
    },
    "authors": [
        {
            "name": "Bruno Meilick",
            "email": "b@bnomei.com"
        }
    ],
    "scripts": {
        "dist": [
            "composer install --no-dev --optimize-autoloader",
            "yarn upgrade",
            "git rm -rf --cached .; git add .;"
        ]
    }
}
